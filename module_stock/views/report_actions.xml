    <!-- Action for Report by Purchase ID -->
    <record id="action_report_purchase_id" model="ir.actions.report">
        <field name="name">Report by Purchase ID</field>
        <field name="model">school.purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_stock_management.report_purchase_id</field>
        <field name="report_file">school_stock_management.report_purchase_id</field>
